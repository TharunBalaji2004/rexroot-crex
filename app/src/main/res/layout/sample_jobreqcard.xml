<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_reqcard"
    android:layout_marginBottom="10dp"
    android:padding="10dp">

    <!-- Job Salary -->
    <TextView
        android:id="@+id/tv_priceperclosure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:text="30K"
        android:textSize="25sp"
        android:textStyle="bold" />

    <!-- Number of Applicants -->
    <LinearLayout
        android:id="@+id/applicantsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_submitted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S: 0"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_rejected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R: 0"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_accepted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="A: 0"
                android:textColor="#4CBB17"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Job Role, Company, Job Place -->
    <LinearLayout
        android:id="@+id/jobInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_toEndOf="@id/tv_priceperclosure"
        android:layout_toStartOf="@id/applicantsTextView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_jobrole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Role"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/tv_compname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company"
            android:textSize="14sp"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/jobPlaceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textSize="12sp"
            android:text="Chennai, Tamil Nadu (On-site)"
            android:layout_gravity="start"/>

    </LinearLayout>
</RelativeLayout>
